<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    tools:context="com.ajaysinghdewari.boundservicesample.MainActivity">

    <Button
        android:id="@+id/start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Service"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_service"
        android:layout_marginTop="10dp"
        android:text="Stop Service"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_service"
        android:layout_marginTop="10dp"
        android:text="bind Service"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bind_service"
        android:layout_marginTop="10dp"
        android:text="unbind Service"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/get_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/unbind_service"
        android:layout_marginTop="10dp"
        android:text="get Random number"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
